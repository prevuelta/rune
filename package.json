{
  "name": "Rune",
  "version": "1.0.0",
  "description": "SVG glyph creator using paper.js. Grid based design system to produce letter forms, icons etc then export as SVG from browser.",
  "main": "index.js",
  "scripts": {
    "build:watch": "parallelshell 'npm run watch:js -s' 'npm run watch:css -s' 'npm run build:html -s' 'http-server ./build/ -p 8000'",
    "watch:js": "watch 'npm run build:js' ./src/assets/javascripts/",
    "watch:css": "sass --watch ./src/assets/stylesheets/main.scss:./build/assets/stylesheets/main.css",
    "watch:html" : "watch 'npm run build:html'",
    "build:html": "cp ./src/index.html ./build/index.html",
    "build": "echo 'building app...' && npm run build:js && npm run build:css && npm run copy-statics",
    "build:js": "echo 'compiling javascript...' && browserify ./src/assets/javascripts/app.js | uglifyjs -b -o ./build/assets/javascripts/app.min.js",
    "build:css": "echo 'compiling stylesheets...' && sass ./src/assets/stylesheets/main.scss:./build/assets/stylesheets/main.css",
    "copy-statics": "echo 'Copying statics...' && cp ./src/index.html ./build/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prevuelta/rune.git"
  },
  "browserify": {
    "extension": [
      "jsx"
    ],
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prevuelta/rune/issues"
  },
  "homepage": "https://github.com/prevuelta/rune",
  "devDependencies": {
    "browserify": "latest",
    "parallelshell": "^2.0.0",
    "react": "^0.13.3",
    "reactify": "^1.1.1",
    "uglifyjs": "^2.4.10",
    "watch": "latest"
  }
}
