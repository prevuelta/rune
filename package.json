{
    "name": "Rune",
    "version": "0.0.1",
    "description": "SVG glyph creator using paper.js. Grid based design system to produce letter forms, icons etc then export as SVG from browser.",
    "main": "app.min.js",
    "scripts": {
        "flow": "flow",
        "start": "npm run lib && npm run build && npm run serve",
        "watch": "run-p copy-statics watch:js watch:css build:html serve",
        "serve": "echo 'Serving on 8000' && browser-sync start --port 8000 --serveStatic './dist' --files './dist/*'",
        "watch:js": "watch 'npm run build:js' ./src/scripts/",
        "watch:css": "sass --watch ./src/styles/main.scss:./dist/styles/main.css",
        "watch:html": "watch 'npm run build:html'",
        "build:html": "cp ./src/index.html ./dist/index.html",
        "build": "echo 'building app...' && npm run lib && npm run build:js && npm run build:css && npm run copy-statics",
        "build:js": "echo 'compiling javascript...' && browserify -t unflowify --fast -x react -x react-draggable -x react-dom -x redux ./src/scripts/app.js > ./dist/app.min.js && echo 'Finished compiling.'",
        "lib": "echo 'compiling libraries...' && browserify -r react -r react-draggable -r react-dom -r redux -o ./dist/lib.min.js && echo 'Finished lib compile'",
        "build:css": "echo 'compiling stylesheets...' && sass ./src/styles/main.scss:./dist/styles/main.css",
        "copy-statics": "echo 'Copying statics...' && cp -R ./src/assets/ ./dist/assets/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/prevuelta/rune.git"
    },
    "browserify": {
        "extension": [
            "jsx"
        ],
        "transform": [
            [
                "babelify",
                {
                    "presets": [
                        "es2015",
                        "react"
                    ]
                }
            ]
        ]
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/prevuelta/rune/issues"
    },
    "homepage": "https://github.com/prevuelta/rune",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.23.0",
        "babelify": "^8.0.0",
        "browser-sync": "^2.18.13",
        "browserify": "latest",
        "eslint": "^4.13.1",
        "flow-bin": "^0.72.0",
        "npm-run-all": "^4.1.3",
        "redux-devtools": "^3.4.1",
        "reload": "^2.2.2",
        "unflowify": "^1.0.1",
        "watch": "latest"
    },
    "dependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-draggable": "^3.0.4",
        "react-redux": "^5.0.6",
        "redux": "^4.0.0",
        "svgo": "^1.0.3"
    }
}
